<div class="comment">
  <p>
    <div class="comment_auther"><b>
      <% if comment.author == @current_user %>
        you
      <% else %>
        <%= comment.author.name %>
      <% end %>
    </b></div> at 
    <div class="comment_date"><b><%= comment.created_at %></b> says:</div>
  </p>
  <div class="comment_content">
    <p><%= comment.content %></p>
  </div>
</div>
<% no_reply ||= false %>
<% unless no_reply %>
  <% unless @current_user == comment.author %>
    <%= link_to("reply to #{comment.author.name}", 
        new_reply_path(:comment_id => comment.id, :target_type=>"comment")) %>
  <% end %>
  <%= render(:partial=>"shared/reply", :collection=>comment.replies) %>
<% end %>
<br />

