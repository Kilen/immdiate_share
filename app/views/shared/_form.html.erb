<%= form_for(@user,:url => handle_path, 
             :method => method, :html=>{:class=>"nice"}) do |f| %>
  <%= render(:partial => "shared/form_errors", :object => @user) %>
    <%= f.label(:name, "name: ") %>
    <%= f.text_field(:name,:class=>"input-text") %>
    <%= f.label(:password, "password: ") %>
    <%= f.password_field(:password,:class=>"input-text") %>
    <%= f.label(:password_confirmation, "cofirm your password: ") %>
    <%= f.password_field(:password_confirmation,:class=>"input-text") %>
    <%= f.label(:email, "e-mail: ") %>
    <%= f.text_field(:email,:class=>"input-text") %>
    <br />
    <%= f.submit(button_name,:class=>"nice white radius button") %>
<% end %>
<hr />
Click <%= link_to("here to login",gate_path,:class=>"small white button") %>, if you have an account
