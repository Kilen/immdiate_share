<h1>Listing users</h1>

<table>
  <tr>
    <th>name</th>
    <th>admin</th>
    <th>email</th>
    <th>edit</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td>
      <%= user.is_admin? %>
      <%= button_to("change", change_admin_user_path(user)) %>
    </td>
  	<td><%= user.email %></td>
    <td>
      <%= link_to 'Show', user %> 
      <%= link_to 'Edit', edit_user_path(user) %>
      <%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New User', new_user_path %>
