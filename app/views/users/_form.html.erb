<%= form_for(@user) do |f| %>
  <%= render(:partial => "shared/form_errors", :object => @user) %>
  <p>
    <%= f.label(:name, "name: ") %>
    <%= f.text_field(:name) %>
  </p>
  <p>
    <%= f.label(:password, "password: ") %>
    <%= f.password_field(:password) %>
  </p>
  <p>
    <%= f.label(:password_confirmation, "cofirm your password: ") %>
    <%= f.password_field(:password_confirmation) %>
  </p>
  <p>
    <%= f.label(:email, "e-mail: ") %>
    <%= f.text_field(:email) %>
  </p>
  <div class="actions">
    <%= f.submit("create new user") %>
  </div>
<% end %>
