<%= page_title("Share Image(url)") %>
<%= form_for @share_image, :url=>images_path, 
  :html=>{:multipart=>true, :class=>"nice"} do |f|%>
  <%= render(:partial=>"shared/form_errors", :object=>@share_image) %>
  <%= f.label(:image_url, "please copy the url of image to here
              (only support \"bmp\",\"gif\",\"jpg\",\"png\")") %>
  <%= f.text_field(:image_url, :class=>"input-text", :style=>"width:80%",
                   :placeholder=>"image url")%>
  <%= f.text_area(:description, :rows=>10,:style=>"width:80%",
                  :placeholder=>"description of image") %>
  <%= f.text_field(:website_url, :class=>"input-text", :style=>"width:80%",
                   :placeholder=>"website url")%>
  <%= render("shared/choose_friends") %>
  <%= f.hidden_field(:from_where, :value=>"from_url")%>
  <%= f.submit("share image", :class=>"nice blue radius button") %>
<% end %>

<%= link_to("Click here", upload_path) %> if you want to <b>upload image</b> from your computer
